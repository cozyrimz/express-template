{
  "name": "node-express-template-typescript",
  "version": "1.0.0",
  "description": "Node-js Express Template",
  "main": "built/index.js",
  "scripts": {
    "bw": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon built/index.js\")",
    "heroku-start": "node built/index.js",
    "dev": "nodemon",
    "start": "ts-node src/index.ts",
    "postinstall": "tsc && tsc-alias",
    "build": "tsc && tsc-alias",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write --check src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cozyrimz"
  },
  "keywords": [
    "express",
    "template",
    "mongoose",
    "nodejs"
  ],
  "author": "Sarim R Shah",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "eslint": "^7.32.0",
    "express": "^4.18.2",
    "formidable": "v3",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mime": "^3.0.0",
    "mongodb": "^6",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "openai": "^4.17.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.199",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "4.3.8",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsc-watch": "^6.0.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "21.x"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run format",
      "npm run lint"
    ],
    "*.md": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
