{
  "name": "node-express-template-typescript",
  "version": "1.0.0",
  "description": "Node-js Express Template",
  "main": "built/index.js",
  "scripts": {
    "bw": "./node_modules/.bin/tsc-watch",
    "heroku-start": "node built/index.js",
    "dev": "yarn && yarn bw --onSuccess \"nodemon built/index.js\"",
    "start": "node built/index.js",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write --check src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cozyrimz"
  },
  "keywords": [
    "fantasy",
    "statistics",
    "scraping"
  ],
  "author": "Sarim R Shah",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cron": "^2.4.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "eslint": "^7.32.0",
    "express": "^4.18.2",
    "formidable": "v3",
    "joi": "^17.10.2",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mime": "^3.0.0",
    "mongoose": "^7.6.1",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "4.3.8",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "18.x"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run format",
      "npm run lint"
    ],
    "*.md": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
